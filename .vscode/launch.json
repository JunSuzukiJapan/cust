    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'cust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cust",
                    "--package=cust"
                ],
                "filter": {
                    "name": "cust",
                    "kind": "bin"
                }
            },
            "args": ["-c", "../cust_tmp/global_union.cust"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'cust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=cust",
                    "--package=cust"
                ],
                "filter": {
                    "name": "cust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example 'trait'",
